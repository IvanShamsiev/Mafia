<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:layout_gravity="center_horizontal"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название комнаты"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textRoomStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Состояние: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textRoomType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип комнаты: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textRoomMaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создатель комнаты"
        android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/colorPrimaryDark" />

</LinearLayout>