<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPlayersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество игроков: "
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editPlayersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMafiaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество Мафий: "
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editMafiaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDoctorCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество Докторов: "
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editDoctorCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textSheriffCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество Шерифов: "
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editSheriffCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCivilianCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество Мирных жителей: "
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editCivilianCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberSigned" />
    </LinearLayout>

</LinearLayout>